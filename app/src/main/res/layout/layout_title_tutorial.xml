        android:layout_above="@+id/loadRecoMoviesDummy_bts"
        android:layout_alignEnd="@+id/loadRecoMoviesDummy_bts"
        android:layout_marginEnd="-62dp"
        android:layout_marginBottom="-328dp"
        android:text="Touch the screen to skip..."
        android:textColor="@android:color/black"
        android:textSize="16dp" />

</RelativeLayout>
