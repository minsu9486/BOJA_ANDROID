<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_title_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/loadRecoMoviesDummy_bts"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_button"
        android:text="Get More Movies !"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <!--    Onboarding Tutorial-->
    <ImageView
        android:id="@+id/tuto_thumbDown_bts"
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_toLeftOf="@id/loadRecoMoviesDummy_bts"
        android:layout_marginRight="36dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_thumb_down"
        app:tint="@color/colorAccent"/>

    <TextView
        android:id="@+id/tuto_thumbDown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loadRecoMoviesDummy_bts"
        android:layout_alignEnd="@+id/loadRecoMoviesDummy_bts"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="99dp"
        android:text="Swipe left if you don't like"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/tuto_thumbUp_bts"
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_toRightOf="@id/loadRecoMoviesDummy_bts"
        android:layout_marginLeft="36dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_thumb_up"
        app:tint="@color/colorAccent" />

    <TextView
        android:id="@+id/tuto_thumbUp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loadRecoMoviesDummy_bts"
        android:layout_alignEnd="@+id/loadRecoMoviesDummy_bts"
        android:layout_marginEnd="-48dp"
        android:layout_marginBottom="99dp"
        android:text="Swipe right if you like"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tuto_end_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loadRecoMoviesDummy_bts"
        android:layout_alignEnd="@+id/loadRecoMoviesDummy_bts"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="99dp"
        android:text="Enjoy!"
        android:textColor="@android:color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

