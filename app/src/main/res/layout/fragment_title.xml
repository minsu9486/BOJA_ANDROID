<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/loadRecoMoviesDummy_bts"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_button"
        android:contentDescription="load recommended movies"
        android:text="Get More Movies !"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/deco_thumbUp_bts"
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_toLeftOf="@id/loadRecoMoviesDummy_bts"
        android:layout_marginRight="36dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_thumb_down"
        app:tint="@color/colorAccent"/>

    <ImageView
        android:id="@+id/deco_thumbDown_bts"
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_toRightOf="@id/loadRecoMoviesDummy_bts"
        android:layout_marginLeft="36dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_thumb_up"
        app:tint="@color/colorAccent" />

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/cardstack_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp"
            android:clipToPadding="false"/>

    </androidx.drawerlayout.widget.DrawerLayout>

    <Button
        android:id="@+id/loadRecoMovies_bts"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_button"
        android:contentDescription="load recommended movies"
        android:text="Get More Movies !"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
